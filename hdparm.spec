%prep
%setup  -q
%patch0 -p1

%build
%{__make} \
	CC="%{__cc}" \
	CFLAGS="%{rpmcflags}"

%install
rm -rf $RPM_BUILD_ROOT
install -d $RPM_BUILD_ROOT{{%{_sbindir},%{_mandir}/{man8,pl/man8}},%{_sysconfdir}/{sysconfig,rc.d/init.d}}

